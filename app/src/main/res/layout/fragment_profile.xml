<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/profile_LBL_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUp_IMG_icon"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_IMG_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_pic" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:text="First Name"
            android:textColor="@color/ocean_blue" />
        <TextView
            android:id="@+id/profile_TXT_firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Vladi"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"/>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:text="Last Name"
            android:textColor="@color/ocean_blue" />

        <TextView
            android:id="@+id/profile_TXT_lastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="Karasove"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:text="Phone Number"
            android:textColor="@color/ocean_blue" />

        <TextView
            android:id="@+id/profile_TXT_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="0542089220"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:text="Year Of Birth"
            android:layout_marginTop="15dp"
            android:textColor="@color/ocean_blue" />

        <TextView
            android:id="@+id/profile_TXT_birthYear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="1997"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>